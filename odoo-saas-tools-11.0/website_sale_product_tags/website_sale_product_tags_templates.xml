<?xml version="1.0" encoding="utf-8"?>
<openerp><data>

<template id="assets_frontend" inherit_id="website.assets_frontend" name="Shop">
    <xpath expr="." position="inside">
        <link rel='stylesheet' href='/website_sale_product_tags/static/src/css/website_sale_product_tags.css'/>
    </xpath>
</template>


<template id="product" inherit_id="website_sale.product" customize_show="True" name="Product Tags">
    <xpath expr="//div[@id='product_full_description']" position="after">
        <div class="container mb8 product-tags" t-if="len(product.tag_ids)">
            <t t-foreach="product.tag_ids" t-as="tag">
                <a class="product-tag" t-attf-href="/shop?search=#{tag.name}"><span t-attf-class="label #{tag.style or 'label-primary'}" t-field="tag.name"/></a>
            </t>
        </div>
    </xpath>
</template>

<template id="recommended_products" inherit_id="website_sale.recommended_products" name="Fix margin for alternative products">
    <xpath expr="//div[@t-if='product.alternative_product_ids']" position="attributes">
        <attribute name="class">container</attribute>
    </xpath>
</template>

</data></openerp>
